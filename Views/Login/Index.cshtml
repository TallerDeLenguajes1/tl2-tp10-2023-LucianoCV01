@model tl2_tp10_2023_LucianoCV01.ViewModels.LoginViewModel

<div class="container d-flex justify-content-center align-items-center mt-5 mb-4" style="min-height: 50vh;">
    <div class="card p-4"style="max-width: 350px; width: 100%; box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);">
        <h5 class="mb-4 text-center">Inicia sesión para continuar</h5>

        <form asp-controller="Login" asp-action="Login" method="post">
            <div class="form-group mb-3">
                <label asp-for="@Model.NombreDeUsuario" hidden></label>
                <input asp-for="@Model.NombreDeUsuario" class="form-control"
                    placeholder="Introduce tu nombre de usuario" />
                <span asp-validation-for="@Model.NombreDeUsuario" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="@Model.Contrasenia" hidden></label>
                <input asp-for="@Model.Contrasenia" class="form-control" type="password"
                    placeholder="Introduce tu contraseña" />
                <span asp-validation-for="@Model.Contrasenia" class="text-danger"></span>
            </div>
            <div class="text-center">
                <button type="submit" class="btn iniciarSesion">Iniciar Sesión</button>
            </div>
        </form>

        <div class="mt-2 d-flex justify-content-start align-items-center flex-wrap">
            <span class="text-center preguntaRegistro">¿No tienes una cuenta?</span>
            <a class="nav-link ml-auto registro" asp-area="" asp-controller="Usuario" asp-action="CrearUsuario">Regístrate</a>
        </div>
        <a class="nav-link recuperarContra" asp-area="" asp-controller="Home" asp-action="Error404">Recuperar
            contraseña</a>

        <h6 class="mb-3 mt-3 text-center">O continúa con:</h6>
        <div class="text-center">
            <a class="btn btn-outline-danger mb-2 w-100" asp-area="" asp-controller="Home" asp-action="Error404">Google</a>
            <a class="btn btn-outline-success mb-2 w-100" asp-area="" asp-controller="Home" asp-action="Error404">Microsoft</a>
            <a class="btn btn-outline-secondary mb-2 w-100" asp-area="" asp-controller="Home" asp-action="Error404">Apple</a>
            <a class="btn btn-outline-primary mb-2 w-100" asp-area="" asp-controller="Home" asp-action="Error404">Facebook</a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
