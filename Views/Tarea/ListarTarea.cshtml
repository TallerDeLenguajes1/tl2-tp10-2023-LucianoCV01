@model tl2_tp10_2023_LucianoCV01.ViewModels.ListarTareaViewModel

<h2>Lista Tareas</h2>

<a class="btn btn-primary" asp-area="" asp-controller="Tarea" asp-action="CrearTarea" asp-route-idTablero="@Model.IdTablero">Nuevo +</a>

<table class="table table-dark">
    <thead>
        <tr>
            <th hidden>ID Tarea</th>
            <th>Nombre</th>
            <th>Estado</th>
            <th>Descripcion</th>
            <th>Color</th>
            <th hidden>ID Usuario</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var tarea in Model.Tareas)
        {
            <tr>
                <td hidden>@tarea.Id</td>
                <td>@tarea.Nombre</td>
                <td>@tarea.Estado</td>
                <td>@tarea.Descripcion</td>
                <td>@tarea.Color</td>
                <td hidden>@tarea.IdUsuarioAsignado</td>
                <td>
                    <a asp-controller="Tarea" asp-action="ModificarTarea" asp-route-idTarea="@tarea.Id">Modificar</a>
                </td>
                <td>
                    <a asp-controller="Tarea" asp-action="EliminarTarea" asp-route-idTarea="@tarea.Id"
                        onclick="return confirm('Â¿Estas seguro que quieres eliminar el elemento?')">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>