@model tl2_tp10_2023_LucianoCV01.ViewModels.ListarTableroViewModel

<section>
    <article>
        <h2>Lista Tableros</h2>

        <table class="table table-dark">
            <thead>
                <tr>
                    <th hidden>ID Tablero</th>
                    <th>Nombre</th>
                    <th>Descripción</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var tablero in Model.Tableros)
                {
                    <tr>
                        <td hidden>@tablero.Id</td>
                        <td>@tablero.Nombre</td>
                        <td>@tablero.Descripcion</td>
                        <td>
                            <a asp-controller="Tablero" asp-action="ModificarTablero"
                                asp-route-idTablero="@tablero.Id">Modificar</a>
                        </td>
                        <td>
                            <a asp-controller="Tablero" asp-action="EliminarTablero" asp-route-idTablero="@tablero.Id"
                                onclick="return confirm('¿Estas seguro que quieres eliminar el elemento?')">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </article>
</section>